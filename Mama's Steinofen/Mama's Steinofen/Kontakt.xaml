        <TextBlock HorizontalAlignment="Left" FontSize="36" Margin="30,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" Height="40" FontFamily="Times New Roman"><Run Language="de-de" Text="Kontakt"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" FontSize="20" Margin="30,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="183" Height="26" FontFamily="Times New Roman"><Run Language="de-de" Text="Tel.: 0660 420 69 187"/></TextBlock>
